{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.api"
  },
  "deploy": {
    "startCommand": "sh -c 'PYTHONPATH=/app:$PYTHONPATH uvicorn ghl_real_estate_ai.api.main:app --host 0.0.0.0 --port ${PORT:-8000} --workers 1 --log-level info --proxy-headers --forwarded-allow-ips=\"*\"'",
    "healthcheckPath": "/docs",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
