# Customer Intelligence Platform - Environment Configuration

# =============================================================================
# AI Provider Configuration (at least one required)
# =============================================================================

# Anthropic Claude (Recommended)
ANTHROPIC_API_KEY=your_claude_api_key_here

# Google Gemini (Optional)
GEMINI_API_KEY=your_gemini_api_key_here

# Perplexity AI (Optional)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Default LLM Provider (claude, gemini, perplexity)
DEFAULT_LLM_PROVIDER=claude

# Default Model
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# Database Configuration
# =============================================================================

# For development (SQLite)
DATABASE_URL=sqlite:///./customer_intelligence.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/customer_intelligence

# =============================================================================
# Cache Configuration
# =============================================================================

# Redis URL (for production)
# REDIS_URL=redis://localhost:6379

# File cache directory (for development)
CACHE_DIR=.cache

# =============================================================================
# API Configuration
# =============================================================================

# API Server
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Settings
ALLOWED_ORIGINS=*

# =============================================================================
# Logging Configuration
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/platform.log

# =============================================================================
# ChromaDB Configuration
# =============================================================================

CHROMA_PERSIST_DIRECTORY=./.chroma_db

# =============================================================================
# Application Settings
# =============================================================================

ENVIRONMENT=development

# Session secret (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# =============================================================================
# Docker-specific Settings
# =============================================================================

# Compose project name
COMPOSE_PROJECT_NAME=customer-intelligence

# =============================================================================
# Security Settings
# =============================================================================

# Enable/disable debug mode
DEBUG=true

# JWT settings (if implementing authentication)
# JWT_SECRET=your_jwt_secret_here
# JWT_ALGORITHM=HS256
# JWT_EXPIRE_MINUTES=60

# =============================================================================
# ML Model Settings
# =============================================================================

# Model storage directory
MODEL_STORAGE_PATH=./models

# Default model training parameters
DEFAULT_TRAIN_TEST_SPLIT=0.2
DEFAULT_RANDOM_STATE=42

# =============================================================================
# Monitoring and Health Checks
# =============================================================================

# Health check intervals
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable specific features
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_ASYNC_PROCESSING=true

# =============================================================================
# External Integrations (Optional)
# =============================================================================

# CRM Integration
# SALESFORCE_CLIENT_ID=your_salesforce_client_id
# HUBSPOT_API_KEY=your_hubspot_api_key

# Communication Platforms
# SLACK_BOT_TOKEN=your_slack_bot_token
# TEAMS_WEBHOOK_URL=your_teams_webhook_url

# Analytics Platforms
# MIXPANEL_TOKEN=your_mixpanel_token
# SEGMENT_WRITE_KEY=your_segment_write_key