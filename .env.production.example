# Multi-Tenant Memory System - Production Environment Variables
# Copy this file to .env and configure your actual values

# Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database & Cache Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/enterprisehub_production
REDIS_URL=redis://localhost:6379/0
DATABASE_POOL_SIZE=20
REDIS_POOL_SIZE=25

# Claude Integration (REQUIRED)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=1000
CLAUDE_TEMPERATURE=0.7

# GoHighLevel Integration (REQUIRED)
GHL_API_KEY=your_ghl_api_key_here
GHL_LOCATION_ID=your_default_location_id
GHL_WEBHOOK_SECRET=your_webhook_secret_here

# Security Configuration
JWT_SECRET_KEY=your_secure_random_string_here_minimum_32_characters
SESSION_TIMEOUT=3600
ENABLE_AUDIT_LOGGING=true

# Performance Configuration
MEMORY_CACHE_TTL=1800
ENABLE_PERFORMANCE_MONITORING=true
MAX_CONCURRENT_USERS=1000

# Multi-Tenant Memory System Specific
ENABLE_BEHAVIORAL_LEARNING=true
ENABLE_CONTINUOUS_MEMORY=true
TENANT_ISOLATION_MODE=strict
MEMORY_RETENTION_DAYS=365