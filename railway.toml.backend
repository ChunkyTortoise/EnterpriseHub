[build]
builder = "docker"

[deploy]
startCommand = "uvicorn main:app --host 0.0.0.0 --port $PORT"
healthcheckPath = "/docs"
healthcheckTimeout = 100
restartPolicyType = "on_failure"

[service]
name = "ghl-real-estate-engine"

# CRITICAL: This enables the Persistent Volume for SQLite
[[mounts]]
path = "/app/database"
size = "1GB"