# GHL Real Estate AI - Environment Configuration Template
# Copy this file to .env and update with your actual API keys

# ==============================================================================
# Claude AI Configuration (Required for AI features)
# ==============================================================================
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-claude-api-key-here

# ==============================================================================
# Google Gemini AI Studio (Optional)
# ==============================================================================
# Get your key from: https://aistudio.google.com/
GOOGLE_API_KEY=your-google-api-key-here

# ==============================================================================
# Perplexity Pro (Optional)
# ==============================================================================
# Get your key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# ==============================================================================
# GoHighLevel Integration (Required for CRM functionality)
# ==============================================================================
# Get your API key from GHL → Settings → API
GHL_API_KEY=your-ghl-api-key-here
LOCATION_ID=your-ghl-location-id-here

# ==============================================================================
# Stripe Billing Integration (Required for subscription management)
# ==============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Product Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_ID_STARTER=price_starter_monthly
STRIPE_PRICE_ID_PROFESSIONAL=price_professional_monthly
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_monthly

# ==============================================================================
# Database Configuration (Required for production)
# ==============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/enterprisehub
REDIS_URL=redis://localhost:6379

# ==============================================================================
# Security Configuration
# ==============================================================================
JWT_SECRET_KEY=your-secure-jwt-secret-key-32-chars-minimum
GHL_WEBHOOK_SECRET=your-ghl-webhook-secret-for-signature-verification

# ==============================================================================
# Claude Code Optimization Configuration (Phase 1-4)
# ==============================================================================
# Phase 1-2 Optimizations (Foundation - 40-70% cost savings)
ENABLE_CONVERSATION_OPTIMIZATION=false
ENABLE_ENHANCED_CACHING=false
ENABLE_ASYNC_OPTIMIZATION=false

# Phase 3-4 Advanced Optimizations (80-90% total cost reduction)
ENABLE_TOKEN_BUDGET_ENFORCEMENT=false
ENABLE_DATABASE_CONNECTION_POOLING=false
ENABLE_SEMANTIC_RESPONSE_CACHING=false
ENABLE_MULTI_TENANT_OPTIMIZATION=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_COST_PREDICTION=false

# Optimization Configuration Values
TOKEN_BUDGET_DEFAULT_MONTHLY=100000
TOKEN_BUDGET_DEFAULT_DAILY=5000
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
SEMANTIC_CACHE_SIMILARITY_THRESHOLD=0.85
SEMANTIC_CACHE_TTL=3600

# ==============================================================================
# Application Configuration
# ==============================================================================
STREAMLIT_SERVER_PORT=8501
LOG_LEVEL=INFO
USE_DEMO_DATA=true
DEBUG_MODE=true
DEVELOPMENT_MODE=true
ENVIRONMENT=development
