# AI DevOps Suite Environment Configuration

# Application
APP_NAME=AI DevOps Suite
ENVIRONMENT=development  # development, staging, production

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/devops_suite
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Security
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501
API_KEYS=

# Monitoring
SENTRY_DSN=  # Optional: Sentry error tracking
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Stripe (optional, for billing features)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Web Scraping
SCRAPER_RATE_LIMIT=2.0  # requests per second
SCRAPER_RESPECT_ROBOTS=true
SCRAPER_USER_AGENT=AIDevOpsSuite/0.1 (+https://devops-suite.example.com/bot)

# Feature Flags
ENABLE_EXPERIMENTS=true
ENABLE_TELEMETRY=true
ENABLE_DATA_PIPELINE=true
