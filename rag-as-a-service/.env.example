# RAG-as-a-Service Environment Configuration
# Copy this file to .env and update with your values

# Database
RAG_DATABASE_URL=postgresql+asyncpg://rag:rag@localhost:5432/rag_service

# Redis Cache
RAG_REDIS_URL=redis://localhost:6379/0

# Stripe Billing
RAG_STRIPE_API_KEY=sk_test_xxx
RAG_STRIPE_WEBHOOK_SECRET=whsec_xxx
RAG_STRIPE_STARTER_PRICE_ID=price_starter_rag
RAG_STRIPE_PRO_PRICE_ID=price_pro_rag
RAG_STRIPE_BUSINESS_PRICE_ID=price_business_rag

# Embedding Provider (openai, cohere, local)
RAG_EMBEDDING_PROVIDER=openai
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_EMBEDDING_API_KEY=sk-xxx
RAG_EMBEDDING_DIMENSION=1536

# LLM Provider (openai, anthropic, local)
RAG_LLM_PROVIDER=openai
RAG_LLM_MODEL=gpt-4o-mini
RAG_LLM_API_KEY=sk-xxx

# Document Chunking
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50

# Retrieval
RAG_TOP_K=10
RAG_RERANK_TOP_K=5

# Tier Limits
RAG_STARTER_QUERIES_PER_MONTH=5000
RAG_STARTER_STORAGE_MB=1000
RAG_PRO_QUERIES_PER_MONTH=50000
RAG_PRO_STORAGE_MB=10000
RAG_BUSINESS_QUERIES_PER_MONTH=500000
RAG_BUSINESS_STORAGE_MB=100000

# Auth
RAG_JWT_SECRET=change-me-in-production-use-random-64-char-string

# Security
ALLOWED_ORIGINS=http://localhost:3000
API_KEYS=

# App
RAG_DEBUG=false
RAG_HOST=0.0.0.0
RAG_PORT=8000
