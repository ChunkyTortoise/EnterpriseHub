# EnterpriseHub Production Environment Configuration
# Copy to .env.production and fill with actual values

# Database Configuration
POSTGRES_DB=ai_operations
POSTGRES_USER=enterprisehub_prod
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# Application Security
SECRET_KEY=CHANGE_ME_32_CHAR_SECRET_KEY_HERE
JWT_SECRET=CHANGE_ME_JWT_SECRET_HERE
ENCRYPTION_KEY=CHANGE_ME_32_CHAR_ENCRYPTION_KEY

# GHL Integration
GHL_API_KEY=CHANGE_ME_GHL_API_KEY_HERE
GHL_WEBHOOK_SECRET=CHANGE_ME_GHL_WEBHOOK_SECRET_HERE
GHL_LOCATION_ID=CHANGE_ME_GHL_LOCATION_ID_HERE

# AI/ML Services
ANTHROPIC_API_KEY=CHANGE_ME_ANTHROPIC_API_KEY_HERE
OPENAI_API_KEY=CHANGE_ME_OPENAI_API_KEY_HERE

# Infrastructure
ENVIRONMENT=production
LOG_LEVEL=INFO
HEALTH_CHECK_ENABLED=true

# Monitoring & Security
SECURITY_SCAN_ENABLED=true
PERFORMANCE_MONITORING=true
AUDIT_LOGGING=true

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/enterprisehub.crt
SSL_KEY_PATH=/etc/ssl/private/enterprisehub.key
SSL_DHPARAM_PATH=/etc/ssl/certs/dhparam.pem

# Database High Availability
POSTGRES_REPLICA_HOST=postgres-replica
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=CHANGE_ME_REPLICATION_PASSWORD

# Circuit Breaker & Rate Limiting
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Performance Targets
WEBHOOK_PROCESSING_TIMEOUT_MS=200
DEDUPLICATION_TIMEOUT_MS=10
CIRCUIT_BREAKER_EVAL_TIMEOUT_MS=5
ML_INFERENCE_TIMEOUT_MS=500