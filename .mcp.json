{
  "mcpServers": {
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"],
      "alwaysAllow": ["browser_click", "browser_navigate", "browser_type"]
    },
    "notebooklm": {
      "command": "python3",
      "args": [".claude/mcp-servers/notebooklm/server.py"],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "${GOOGLE_APPLICATION_CREDENTIALS}"
      }
    },
    "perplexity": {
      "command": "npx",
      "args": ["-y", "@perplexity-ai/mcp-server@latest"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "upwork": {
      "command": "npx",
      "args": ["-y", "@chinchillaenterprises/mcp-upwork@latest"]
    },
    "gumroad": {
      "command": "npx",
      "args": ["-y", "gumroad-mcp@latest"],
      "env": {
        "GUMROAD_ACCESS_TOKEN": "${GUMROAD_ACCESS_TOKEN}"
      }
    },
    "linkedin": {
      "command": "npx",
      "args": ["-y", "@ldraney/mcp-linkedin@latest"]
    },
    "ghl": {
      "command": "npx",
      "args": ["-y", "ghl-mcp-server@latest"],
      "env": {
        "GHL_API_KEY": "${GHL_API_KEY}",
        "GHL_BASE_URL": "https://services.leadconnectorhq.com",
        "GHL_LOCATION_ID": "${GHL_LOCATION_ID}"
      }
    },
    "google-calendar": {
      "command": "npx",
      "args": ["-y", "google-calendar-mcp@latest"],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}",
        "GOOGLE_REDIRECT_URI": "http://localhost:3000/oauth2callback"
      }
    },
    "firecrawl": {
      "command": "npx",
      "args": ["-y", "firecrawl-mcp@latest"],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
    "google-sheets": {
      "command": "npx",
      "args": ["-y", "google-sheets-mcp@latest"],
      "env": {
        "GOOGLE_SHEETS_CLIENT_ID": "${GOOGLE_SHEETS_CLIENT_ID}",
        "GOOGLE_SHEETS_CLIENT_SECRET": "${GOOGLE_SHEETS_CLIENT_SECRET}"
      }
    }
  }
}